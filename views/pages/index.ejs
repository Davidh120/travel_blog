<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/assets/stylesheets/webapp.css" />
    <!--Bootstrap and css-->
    <link rel="stylesheet" href="/assets/stylesheets/mini-default.min.css" />
    <title>Blog de Viajes</title>
  </head>
  <body>
    <header class="sticky"><%- include('../partials/header') %></header>

    <body>
      <div class="container">
        <img src="assets/images/fondo.jpg" width="100%" />
        <h1>Inicio</h1>
        <p>Aquí nuestras últimas publicaciones:</p>

        <div class="row">
          <div class="col-sm-12">
            <form action="/" class="buscador">
              <label for="busqueda">Buscar publicación</label>
              <input type="text" id="busqueda" name="busqueda" value="<%=busqueda%>">
              <button type="submit"><span class="icon-search"></span>Buscar</button>
            </form>
          </div>
        </div>

        <div class="row">
          <% publicaciones.forEach(publicacion => { %>
          <div class="col-sm-12">
            <div class="card fluid">
              <h3 class="section">
                <a href="/detalle/<%=publicacion.id%>"> <%= publicacion.titulo %></a>
                <mark class="tag"> <%= publicacion.votos %></mark>
              </h3>
              <h6 id="autores" class="section dark">
                <% if(publicacion.avatar && publicacion.avatar != "") { %>
                  <img class="avatar" src="/avatars/<%=publicacion.avatar%>" alt="">
                <%} else{%>
                  <span class="icon-user" class="avatar2" ></span>
                <%}%>
                <%=publicacion.pseudonimo%> -
                <span class="icon-calendar"></span>
                <%= publicacion.fecha_hora.getFullYear() %>/ <%=
                publicacion.fecha_hora.getMonth()+1 %>/ <%=
                publicacion.fecha_hora.getDate() %>
              </h6>
              <p><%= publicacion.resumen %></p>
            </div>
          </div>
          <% }) %>
        </div>

        <div class="row">
          <div class="col-sm-12">
            <p class="centrado">
              <a href="/?pagina=<%=pagina-1%>"><< Anterior</a>
              |
              <a href="/?pagina=<%=pagina+1%>">Siguiente >></a>
            </p>
          </div>
        </div>
      </div>
    </body>

    <footer><%- include('../partials/footer') %></footer>
    <script src="/javascripts/script.js"></script>
    </script>
  </body>
</html>
