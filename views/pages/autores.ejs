<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/assets/stylesheets/webapp.css" />
    <!--Bootstrap and css-->
    <link rel="stylesheet" href="/assets/stylesheets/mini-default.min.css" />
    <title>Blog de Viajes</title>
  </head>
  <body>
    <header class="sticky"><%- include('../partials/header') %></header>

    <body>
      <div class="container">
        <img src="assets/images/fondo.jpg" width="100%" />
        <h1>Autores</h1>

        <p>Conoce a nuestros autores:</p>

        <% autores.forEach(autor => { %>
            <div class="col-sm-12">
                <div class="card fluid">
                    <h3 class="section">
                        <% if(autor.avatar && autor.avatar != "") { %>
                            <img id="autorAvatar" class="avatar" src="/avatars/<%=autor.avatar%>" alt="">
                          <%} else{%>
                            <span class="icon-user"></span>
                          <%}%>
                        <%=autor.pseudonimo%>
                    </h3>
                    <p>Publicaciones:</p>
                    <ul>
                        <% autor.publicaciones.forEach(publicacion => { %>
                             <li><a href="/detalle/<%=publicacion.id%>>"><%=publicacion.titulo%></a></li>
                         <% }) %>
                    </ul>
                </div>
            </div>
        <%})%>
      </div>
    </body>

    <footer><%- include('../partials/footer') %></footer>
    <script src="/javascripts/script.js"></script>
    </script>
  </body>
</html>