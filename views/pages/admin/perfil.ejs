<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <!--Bootstrap and css-->
    <link rel="stylesheet" href="/assets/stylesheets/webapp.css" />
    <link rel="stylesheet" href="/assets/stylesheets/mini-default.min.css" />
    <script src="/javascripts/ckeditor5-build-classic/ckeditor.js"></script>
    <title>Blog de Viajes</title>
  </head>
  <body>
    <header class="sticky"><%- include('../../partials/header_admin') %></header>

    <body>
        <div class="container">
            <h1>Admin - Editar autor</h1>
            <hr>

            <div class="row">
                <div class="col-sm-12">
                    <% if(mensaje && mensaje.length > 0 ){%>
                        <h4><span class="icon-info"></span><%=mensaje%></h4>
                    <%}%>
                    <form action="/admin/procesar-editar-usuario" method="post" enctype="multipart/form-data">
                        <fieldset>
                            <legend>Autor</legend>
                            <p>
                                <label for="avatar">Avatar</label>
                                <br>
                                <% if(usuario.avatar && usuario.avatar != "") { %>
                                    <img id="editAvatar" class="avatar" src="/avatars/<%=usuario.avatar%>" alt="">
                                  <%} else{%>
                                    <img id="editAvatar" class="avatar" src="/avatars/icono.png" alt="">
                                  <%}%>
                                  <br>
                                  <input type="file" id="avatar" name="avatar">
                            </p>
                            <p>
                                <label for="pseudonimo">Pseudonimo</label>
                                <br>
                                <input type="text" id="pseudonimo" name="pseudonimo" value="<%=usuario.pseudonimo%>">
                            </p>
                            <p>
                                <label for="contrasena">Contrase√±a</label>
                                <br>
                                <input type="password" id="contrasena" name="contrasena" value="<%=usuario.contrasena%>">
                            </p>
                            <p>
                                <input type="submit" class="primary" value="Actualizar">
                               <a href="/admin/index" class="button">Cancelar</a>
                            </p>
                        </fieldset>
                    </form>
                </div>
            </div>
        </div>
    </body>

    <footer><%- include('../../partials/footer') %></footer>
    <script src="/javascripts/script.js"></script>
    </script>
  </body>
</html>